%{
#include<stdio.h>
#include<stdlib.h>
int id=0,num=0,key=0,op=0;
%}
%token NUM,OP,KEY,ID;
%%
NUM input {num++;} 
| ID input { id++; }
| KEY input { key++; }
| OP input { op++; }
| NUM { num++;}
%%
FILE *yyin;
main()
{
	FILE *fin = fopen("sample.c","r");
	if(!fin)
	{
		printf("File cannot be opened!!\n");
		exit(0);
	}
	yyin = fin;
	do
	{
		yyparse();
	}while(!feof(yyin));
	printf("\nNumbers = %d \n Keywords = %d \n Identifiers = %d \n Operator = %d\n",num,key,id,op);
}
int yyerror()
{
	printf("Parse ERROR");
	exit(-1);
}





































































































































































































































































































































































